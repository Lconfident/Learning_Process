<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--
      mapper为映射的根节点，用来管理DAO接口
      namespace指定DAO接口的完整类名，表示mapper配置文件管理哪个DAO接口(包.接口名)
      mybatis会依据这个接口动态创建一个实现类去实现这个接口，而这个实现类是一个Mapper对象
   -->


<mapper namespace="com.atguigu.mapper.EmployeeMapper">
    <!--
          id = "接口中的方法名"
          parameterType = "接口中传入方法的参数类型"
          resultType = "返回实体类对象：包.类名"  处理结果集 自动封装
          注意:sql语句后不要出现";"号
              查询：select标签
              增加：insert标签
              修改：update标签
              删除：delete标签
      -->
    <!--
        #{ key }：占位符 + 赋值   emp_id = ？  ？ = 赋值
        ${ key }：字符串拼接  emp_id = emp_id + id
     -->

    <!-- 根据id查询员工对象 -->
    <select id="queryById" resultType="com.atguigu.pojo.Employee" parameterType="Integer">
        select emp_id empId,emp_name empName, emp_salary empSalary
            from t_emp where emp_id = #{id}
    </select>

    <!-- 场景1：传入单个简单类型 key 随便写 -->

    <delete id="deleteById">
        delete from t_emp where emp_id = #{id}
    </delete>
    
    <select id="queryBySalary" resultType="com.atguigu.pojo.Employee">
        select emp_id empId, emp_name empName,emp_salary empSalary
        from t_emp where emp_salary = #{salary}
    </select>


    <!-- 场景2：传入的是实体对象 key = 对象属性名  -->

    <insert id="insertEmp">
        insert into t_emp (emp_name,emp_salary)
            values(#{empName}, #{empSalary})
    </insert>


    <!-- 场景3：传入多个简单类型
            key 不可以随便取
            按照形参名称获取？ 不可以！
            方案一： 注解指定   @Param 注解 指定多个简单参数的key key = @Param("value值")
            方案二：mybatis默认机制 arg0 arg1 ... 或者 param1 param2 ... 从左到右，依次对应形参
     -->
    <select id="queryByNameAndSalary" resultType="com.atguigu.pojo.Employee">
        select emp_id empId, emp_name empName,emp_salary empSalary
        from t_emp where emp_name = #{name} and emp_salary = #{salary}
    </select>

    <select id="queryByNameAndSalary1" resultType="com.atguigu.pojo.Employee">
        select emp_id empId, emp_name empName,emp_salary empSalary
        from t_emp where emp_name = #{arg0} and emp_salary = #{arg1}
    </select>


    <!-- 场景四：传入map 如何指定key的值
            key = map的key即可！
    -->
    <insert id="insertEmpMap">
        inset into t_emp( emp_name, emp_salary ) value ( #{name},#{salary} )
    </insert>

</mapper>